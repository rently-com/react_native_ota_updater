{
  "name": "@rentlydev/rnota-api-client",
  "version": "2.0.0",
  "description": "API client for the React Native OTA Updater",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "dev:next": "tsup src/index.ts --format cjs --dts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "clean-build": "rm -rf .cache .turbo .next dist",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@rentlydev/rnota-api": "workspace:*",
    "hono": "catalog:"
  },
  "devDependencies": {
    "@rentlydev/rnota-tsconfig": "workspace:*",
    "@types/node": "catalog:node20",
    "tsc-alias": "catalog:",
    "tsup": "^8.3.6",
    "tsx": "catalog:"
  }
}